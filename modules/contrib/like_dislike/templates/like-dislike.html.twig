{#
/**
 * @file
 * Default theme implementation to display a formatted like dislike field.
 *
 * Available variables:
 * - like_url: like url.
 * - dislike_url: dislike url.
 * - likes: number of likes.
 * - dislikes: number of dislikes.
 * - entity_id: Id of entity(content).
 * @ingroup themeable
 */
#}
<div class="like_dislike">
    <div class="like">
        <a class="use-ajax" href={{ like_url }}>Like</a>
        <span id="like-{{ entity_id }}">{{ likes }}</span>
    </div>
    {% if dislike_url %}
    <div class="dislike">
        <a class="use-ajax" href={{ dislike_url }}>Dislike</a>
        <span id="dislike-{{ entity_id }}">{{ dislikes }}</span>
    </div>
    {% endif %}
</div>
<div id="like_dislike_status-{{ entity_id }}"></div>
